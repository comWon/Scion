<Window x:Class="Scion.Wpf.CombatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Scion.Wpf"
        mc:Ignorable="d"
        Title="CombatWindow" Height="463.082" Width="594.768">
    <Grid Margin="0,10,-21,-18" RenderTransformOrigin="0.5,0.5">
        <Grid.RenderTransform>
            <TransformGroup>
                <ScaleTransform/>
                <SkewTransform/>
                <RotateTransform Angle="-0.24"/>
                <TranslateTransform/>
            </TransformGroup>
        </Grid.RenderTransform>
        <Canvas x:Name="TokenCanvas" Height="400"  Width="600">
            <Image x:Name="image" HorizontalAlignment="Left" Height="400" VerticalAlignment="Top" Width="400" Source="Images/Scion_Battlewheel_by_Tiggerherz.jpg" Stretch="Fill"/>

        </Canvas>

    </Grid>
</Window>
