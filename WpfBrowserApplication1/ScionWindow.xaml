<Window x:Class="Scion.Wpf.ScionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Scion.Wpf"
        mc:Ignorable="d"
        Title="ScionWindow" Height="350" Width="475">
    <Grid x:Name="Object" Margin="0,0,-8,-31">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Name="Button" Width="75" />
            <ColumnDefinition Name="Interface" Width="1*" />
        </Grid.ColumnDefinitions>

        <Button x:Name="MonsterButton" Grid.Column="0" Content="Monsters" HorizontalAlignment="Left" Margin="0,17,0,0" VerticalAlignment="Top" Width="75" Click="MonsterButton_Click"/>
        <Button x:Name="ScionButton" Grid.Column="0" Content="Scions" HorizontalAlignment="Left" Margin="0,42,0,0" VerticalAlignment="Top" Width="75" Click="ScionButton_Click"/>
        <Button x:Name="Game" Grid.Column="0" Content="Run Combat" HorizontalAlignment="Left" Margin="0,67,0,0" VerticalAlignment="Top" Width="75" Click="Game_Click"/>

    </Grid>
</Window>
